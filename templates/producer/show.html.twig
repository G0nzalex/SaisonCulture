{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block stylesheets %}
<style>

h1 {
    margin-bottom:20px;
}
body {
    text-align:center;
}
table {
    margin:auto;
}
a {
    margin-top:1rem;
    gap:2rem;
}
</style>
{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantité en stock (en kg)</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ product.bio }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="black" href="{{ path('app_product_index') }}"> Revenir à la liste</a>

    <a class="black" href="{{ path('app_product_edit', {'id': product.id}) }}"> Modifier</a>

    {{ include('producer/_delete_form.html.twig') }}
{% endblock %}
