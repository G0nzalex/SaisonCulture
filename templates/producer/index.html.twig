{% extends 'base.html.twig' %}

{% block title %}Beer index{% endblock %}

{% block body %}
    <h1>Beer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.user.email }}</td>
                <td>
                    {% if product.category %}
                        {{ product.category.title }}
                    {% endif %}
                </td>

                <td>
                    <a href="{{ path('app_beer_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_beer_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
