{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block stylesheets %}
<style>

h1 {
    margin-bottom:20px;
}
body {
    text-align:center;
}
table {
    margin:auto;
}
a {
    margin-top:1rem;
    gap:2rem;
}
</style>
{% endblock %}

{% block body %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="black" href="{{ path('app_category_index') }}">Retour à la liste</a>

    <a class="black" href="{{ path('app_category_edit', {'id': category.id}) }}"> Modifier </a>

    {{ include('admin/_delete_formcategory.html.twig') }}
{% endblock %}
